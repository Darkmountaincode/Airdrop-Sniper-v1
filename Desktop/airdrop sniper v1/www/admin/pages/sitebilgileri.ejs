<%- include('../partials/_header');  %>

		<!-- partial:../../partials/_sidebar.html -->
	<%- include('../partials/_sidebar')  %>
		<!-- partial -->
	
		<div class="page-wrapper">
			<%- include('../partials/_navbar')  %>
			<!-- partial -->

			<div class="page-content">

				<nav class="page-breadcrumb">
					<ol class="breadcrumb">
						<li class="breadcrumb-item"><a href="#">Site</a></li>
						<li class="breadcrumb-item active" aria-current="page">Site Bilgileri</li>
					</ol>
				</nav>

				<div class="row">
					<div class="col-md-12 grid-margin">
						<div class="card">
							<div class="card-body">
								<h6 class="card-title">Site İle İlgili Bilgileri Lütfen Buraya Giriniz</h6>
								<form method="POST" id="sitekaydet"  class="forms-sample" enctype="multipart/form-data"> 
									<div class="row mb-3">
										<div class="col">
											<label class="form-label">Başlık:</label>
											<input class="form-control mb-4 mb-md-0" name="title" id="title" value="<%- site.title %>"/>
										</div>
										<div class="col-md-6">
											<label class="form-label">Açıklama</label>
											<input class="form-control" name="description" id="description" value="<%- site.description  %>" />
										</div>
									</div>        
									                                   
									<div class="row mb-3">
										<div class="col">
											<label class="form-label">Anahtar Kelimeler:</label>
                                            <input name="anahtar" id="tags" value="<%- site.keywords  %>" />
										</div>
									</div>    
									<div class="row mb-3">
										<div class="col">
											<label class="form-label">Site Url:</label>
                                            <input name="anahtar" id="url" class="form-control" value="<%- site.url  %>" />
										</div>
									</div>    
									<div class="row mb-3">
										<div class="col">
											<label class="form-label">Twitter:</label>
											<input class="form-control mb-4 mb-md-0" name="twitter" id="twitter" value="<%- site.socialmedia.twitter %>"/>
										</div>
										<div class="col-md-6">
											<label class="form-label">Telegram</label>
											<input class="form-control" name="telegram" id="telegram" value="<%- site.socialmedia.telegram  %>" />
										</div>
									</div>
									<div class="row mb-3">
										<div class="col">
											<label class="form-label">Discord:</label>
											<input class="form-control mb-4 mb-md-0" name="discord" id="discord" value="<%- site.socialmedia.discord %>"/>
										</div>
										<div class="col-md-6">
											<label class="form-label">Instagram</label>
											<input class="form-control" name="instagram" id="instagram" value="<%- site.socialmedia.instagram  %>" />
										</div>
									</div> 
									<div class="row mb-3">
										<div class="col">
											<label class="form-label">Google Analyctics:</label>
											<input class="form-control mb-4 mb-md-0" name="analiyctics" id="analiyctics" value="<%- site.googleanalytics %>"/>
										</div>
									
									</div> 
                                	<div class="row mb-3">
										<div class="col">
											<img src="/logo/<%- site.logo  %>" alt="" height="120px" width="120px">
											<label class="form-label">Logo:</label>
											<input type="file" id="logo" class="form-control mb-4 mb-md-0" name="logo" />
										</div>
										<div class="col-md-6">
										<label class="form-label">Favicon</label>
											<img src="/logo/<%- site.favicon  %>" alt="" height="120px" width="120px">
											<input type="file" id="favicon" class="form-control" name="favicon" />
										</div>
									</div>           </div>
									<input type="hidden" name="site_id" value="">
                                        <button type="submit" class="btn btn-primary">Güncelle</button>
								</form>
						</div>
					</div>
				</div>
				
			
				</body>
                          <div class="row">
                        <div class="col-md-12 grid-margin">
                            <div class="card">
                                <div class="card-body">
                                    <h6 class="card-title">Site Kontrol Durumları</h6>

			                             <div class="mb-3">
                                            <label class="form-label">Site Bakım Modu Açık Olsun Mu ?</label>
                                            <select name="bakimdurum" id="bakimdurum"  class="js-example-basic-single form-select" data-width="100%">
                                                <option value="true">Aktif</option>
                                                <option value="false" >Pasif</option>
                                            </select>
                                        </div></div>
                                        <button type="submit" class="btn btn-primary">Güncelle</button>

                                    </form>
                              
                            </div>
                        </div>
                    </div>
					<div class="row">
                        <div class="col-md-12 grid-margin">
                            <div class="card">
                                <div class="card-body">
                                    <h6 class="card-title">Anasayfa Ayarları</h6>
									<form action="POST" id="anasayfaayar">

			                             <div class="mb-3">
                                            <label class="form-label">Anasayfa Başlık </label>
                                           <input type="text" class="form-control" id="favorite" value="<%- homepage.favorite  %>">
                                        </div>
										<div class="mb-3">
                                            <label class="form-label">Ansayfa Alt Başlık</label>
                                           <input type="text" class="form-control" id="favoritealtad" value="<%- homepage.favoritealtad  %>">
                                        </div>
										<div class="mb-3">
                                            <label class="form-label">Anasayfa Sağ Başlık</label>
                                           <input type="text" class="form-control" id="newlist" value="<%- homepage.newlist  %>">
                                        </div>
										<div class="mb-3">
                                            <label class="form-label">Anasayfa Sağ Alt Başlık</label>
                                           <input type="text" class="form-control" id="newlistaltad" value="<%- homepage.newlistaltad  %>">
                                        </div>
										<div class="mb-3">
                                            <label class="form-label">Anasayfa Alt Ad</label>
                                           <input type="text" class="form-control" id="altbaslik" value="<%- homepage.altbaslik  %>">
                                        </div>
										<div class="mb-3">
                                            <label class="form-label">Anasayfa Bir Alt Ad</label>
                                           <input type="text" class="form-control" id="altad" value="<%- homepage.altad  %>">
                                        </div>
										<div class="mb-3">
                                            <label class="form-label">Anasayfa Bir Alt Sağ Başlık</label>
                                           <input type="text" class="form-control" id="biralt" value="<%- homepage.biralt  %>">
                                        </div>
										<div class="mb-3">
                                            <label class="form-label">Anasayfa Bir Alt Başlık</label>
                                           <input type="text" class="form-control" id="biraltad" value="<%- homepage.biraltad  %>">
                                        </div></div>
                                        <button type="submit" class="btn btn-primary">Güncelle</button>

                                    </form>
                              
                            </div>
                        </div>
                    </div>
				<div class="row">
			<%- include('../partials/_footer');  %>
		</div>
	</div>
 

